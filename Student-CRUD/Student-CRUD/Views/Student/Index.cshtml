@model IEnumerable<Student_CRUD.Models.Students>

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="text-center">Student List</h3>
        </div>
        <div class="card-body">
            <a asp-action="Create" class="btn btn-success mb-3">+ Add New Student</a>
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.FirstName</td>
                            <td>@student.LastName</td>
                            <td>@student.Email</td>
                            <td>@student.PhoneNumber</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@student.StudentID" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@student.StudentID" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@student.StudentID" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>



</div>
<div class="text-center  mt-4">
    <img src="~/images/students-img.svg" alt="Students" class="student-img">
</div>
