@model Student_CRUD.Models.Students

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h3 class="text-center">Delete Student</h3>
        </div>
        <div class="card-body text-center">
            <p class="lead">Are you sure you want to delete this student?</p>
            <ul class="list-group">
                <li class="list-group-item"><strong>First Name:</strong> @Model.FirstName</li>
                <li class="list-group-item"><strong>Last Name:</strong> @Model.LastName</li>
                <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
            </ul>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="StudentID" />
                <button type="submit" class="btn btn-danger px-4 mt-3">Delete</button>
                <a asp-action="Index" class="btn btn-secondary px-4 mt-3">Cancel</a>
            </form>
        </div>
    </div>
</div>
